{
    "compilerOptions": {
        "target": "es2016",
        "moduleResolution": "node",
        "module": "commonjs",
        "sourceMap": true,
        "inlineSources": true,
        // "noImplicitAny": true,
        // "strictNullChecks": true,
        "allowJs": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "lib": ["es2017", "dom", "esnext"],
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "include": [
        "./src/**/*",
    ]
}
